<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <variable name="myvar" value="myvalue"/>

    <targets>
        <!-- Configure a target for writing to console -->
        <target name="console" xsi:type="ColoredConsole"/>
        
        <!-- Configure a file for errors -->
        <target
            xsi:type="File"
            name="error"
            fileName="${basedir}/logs/errors/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
        />

        <!-- Configure a file for info's -->
        <target
            xsi:type="File"
            name="info"
            fileName="${basedir}/logs/info/${shortdate}.log"
            layout="${logger} ${longdate} ${uppercase:${level}} ${message}"
        />
    </targets>

    <rules>
        <!-- Configure rules for writing everything to console -->
        <logger name="*" minlevel="Info" writeTo="console"/>

        <!-- Configure rules for logging into errors -->
        <logger
            name="*"
            minlevel="Error"
            writeTo="error"
        />

        <!-- Configure rules for logging into info -->
        <logger
            name="*"
            minlevel="Info"
            maxlevel="Warn"
            writeTo="info"
        />
    </rules>
</nlog>